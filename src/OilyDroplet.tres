resource_name = "metaball"
code = "shader_type canvas_item;

uniform vec4 foreground: hint_color;
uniform vec4 background: hint_color;

void fragment()
{
    vec4 pixel = texture(SCREEN_TEXTURE, SCREEN_UV);
    float fg = floor((1.0 - length(pixel)) * 1.2);
    float bg = 1.0 - fg;
    vec4 fgcolor = fg * foreground;
    vec4 bgcolor = bg * background;
    
    COLOR = fgcolor + bgcolor;
    
}
